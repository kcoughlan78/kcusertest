<h2>Log in</h2>

<%= simple_form_for(resource, :as => resource_name, :html => { :class => 'form-horizontal' }, :url => session_path(resource_name)) do |f| %>
    <%= f.input :username %>
    <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <br>
  <% end -%>

  <div><%= f.submit "Log in", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
